{
  "name": "aoe2-ui",
  "private": true,
  "author": "with-heart <with.heart@pm.me>",
  "license": "MIT",
  "scripts": {
    "postinstall": "preconstruct dev",
    "build": "preconstruct build && pnpm --filter=site run build",
    "type-check": "pnpm -r exec tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@changesets/cli": "^2.27.1",
    "@preconstruct/cli": "^2.8.3",
    "@types/bun": "^1.0.8",
    "eslint": "^8",
    "eslint-config-next": "^14.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "syncpack": "^12.3.0"
  },
  "preconstruct": {
    "exports": true,
    "packages": [
      "packages/*"
    ]
  },
  "workspaces": [
    "packages/*",
    "site"
  ]
}
