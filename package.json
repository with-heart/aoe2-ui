{
  "name": "aoe2-ui",
  "private": true,
  "author": "with-heart <with.heart@pm.me>",
  "license": "MIT",
  "scripts": {
    "postinstall": "preconstruct dev",
    "dev": "bun site dev",
    "build": "preconstruct build && bun site run build",
    "type-check": "manypkg exec tsc --noEmit",
    "site": "bun --cwd=site",
    "widgetui": "bun --cwd=packages/widget-ui"
  },
  "dependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-typescript": "^7.23.3",
    "@manypkg/cli": "^0.21.2",
    "@preconstruct/cli": "^2.8.3",
    "@types/bun": "^1.0.5",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "prettier-plugin-organize-imports": "^3.2.4"
  },
  "workspaces": [
    "site",
    "packages/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ],
    "exports": true
  }
}
